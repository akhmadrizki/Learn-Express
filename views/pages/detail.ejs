<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../setup/head') %>
</head>

<body>
    <%- include('../components/header') %>

    <section id="home-content" class="container">
        <div class="my-5">
            <div class="align-items-center d-flex justify-content-between mt-5 mb-4">
                <h3>Detail</h3>
            </div>
            <div class="d-flex">
                <div>
                    <img class="border mb-3" width="350"
                        src='<%- shoe.img %>'
                        alt="shoe" />
                </div>
                <div class="ms-5">
                    <h5><%- shoe.brand %></h5>
                    <h2><%- shoe.name %></h2>
                    <p class="h6 my-4">Availability: <span class='badge text-bg-<%- shoe.available == false ? ' danger' : 'primary' %>'><%- shoe.available %></span></p>
                    <p class="h5">Rp <%- shoe.price.toLocaleString() %></p>
                    <p class="my-4">Hurry up! Only 120 product left in stock!</p>
                    <p>
                        <%- shoe.desc %>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <%- include('../setup/script') %>
</body>

</html>